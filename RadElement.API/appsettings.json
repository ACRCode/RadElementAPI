{
  "Title": "RadElement",
  "Version": "v1",

  "ConnectionStrings": {
    "Database": "server=localhost;user id=root;password=root;persistsecurityinfo=True;database=radelement"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.RollingFile", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": { "pathFormat": "Logs/log-{Date}.log" }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "FlightFiles"
    }
  },

  "Environment": {
    "ApplicationURL": "https://localhost:44319/",
    "SwaggerRoutePrefix": "wiki"
  },

  "AuthorizationConfig": {
    "Issuer": "assist.acr.org",
    "Audience": "assist.acr.org",
    "KeyFilePath": "\\Certifcates\\Marval.pfx",
    "KeyFilePassword": "p&9J567#4567"
  },

  "AccountsConfig": {
    "Accounts": [
      {
        "UserId": "Marval",
        "Secret": "User@Marval@RadElement#",
        "Role": "ReadWrite"
      },
      {
        "UserId": "RadElement",
        "Secret": "User@RadElement@RadElement#",
        "Role": "ReadWrite"
      },
      {
        "UserId": "ThirdParty",
        "Secret": "User@ThirdParty@RadElement#",
        "Role": "ReadWrite"
      }
    ]
  }
}
